{
  "version": 2,
  "build": {
    "env": {
      "GO111MODULE": "on",
      "CGO_ENABLED": "0"
    }
  },
  "builds": [
    {
      "src": "templates/*",
      "use": "@now/static"
    },
    {
      "src": "static/*",
      "use": "@now/static"
    },
    {
      "src": "index.go",
      "use": "@now/go",
      "config": {
        "maxLambdaSize": "20mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/*",
      "dest": "/"
    }
  ]
}
